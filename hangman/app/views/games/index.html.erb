<h1>Hangman</h1>

<div ng-controller="gameCtrl">

<%= render partial: "shared/modal" %>

<div class="row game-container">
	<div class="col-xs-6">
		<%= render partial: "shared/hangman" %>
	</div>

	<div class="col-xs-6">
		<div class="row">
			<div ng-repeat='letter in letters'>
				<div class="keyboard" ng-click="letterClick()" ng-show="showKeys[letter]">
					{{letter | uppercase}}
				</div>
			</div>
		</div>
		<div class="row">
		<div class="letter" ng-repeat="secret in secrets track by $index">
			<div class="letter-show" ng-show="showLetter[secret]">
			{{secret | uppercase }}</div>
			<div class="underScore"></div>
		</div>
		</div>
	</div>
</div>

<div ng-show="winner">WINNER</div>
{{secretWord}}
{{secrets}}

</div>